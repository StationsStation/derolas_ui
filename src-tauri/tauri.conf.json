{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "agent_runner",
  "version": "0.1.44",
  "identifier": "agent-runner",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "agent_runner",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": false,
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "nsis",
      "msi",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
